---
layout: default
---
<div class="post">
<header class="post-header">
    <h1 class="post-title">
    {{ page.title }}
    </h1>
    {% if page.description %}
    <p class="post-description">{{ page.description }}</p>
    {% endif %}
</header>

<article>
    <div class="cv">
    {% for data in site.data.teaching %}
        {% if site.jsonteaching and site.jsonteaching.size > 0 %}
        {% unless site.jsonteaching contains data[0] %}
            {% continue %}
        {% endunless %}
        {% endif %}
        {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
        <a class="anchor" id="{{ data[0] }}"></a>
        <div class="card mt-3 p-3">
        <h3 class="card-title font-weight-medium">
            {% case data[0] %}
            {% when 'thesis' %}
                Student Theses
            {% when 'projects' %}
                Student Projects
            {% else %}
                {{ data[0] | capitalize }}
            {% endcase %}
        </h3>
        <div>
            {% case data[0] %}
            {% when 'lectures' %}
                {% include teaching/lecture.liquid %}
            {% when 'tutorials' %}
                {% include teaching/lecture.liquid %}
            {% when 'thesis' %}
                {% include teaching/lecture.liquid %}
            {% when 'projects' %}
                {% include teaching/lecture.liquid %}
            {% else %}
                
            {% endcase %}
        </div>
        </div>
    {% endfor %}
    </div>
</article>
</div>
